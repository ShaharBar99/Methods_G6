<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.chart.PieChart?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml"
            styleClass="main-pane"
            stylesheets="@ReportScreen.css"
            fx:controller="client.ViewSubscriberController">

    <VBox spacing="20.0" alignment="CENTER"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0"
          styleClass="menu-container"
          style="-fx-padding: 20;">
        
        <TableView fx:id="subscriberTable" prefHeight="400.0" prefWidth="960.0"
                   styleClass="main-table">
            <columns>
                <TableColumn fx:id="colSubscriberId" text="Subscriber ID" prefWidth="200.0"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="200.0"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="200.0"/>
                <TableColumn fx:id="colTag" text="Tag" prefWidth="250.0"/>
                <TableColumn fx:id="colRole" text="Role" prefWidth="200.0"/>
            </columns>
        </TableView>

        <HBox spacing="15.0" alignment="CENTER">
            <Label text="Role:" />
            <ComboBox fx:id="roleComboBox" prefWidth="120"/>
            <Button fx:id="sortBySubscriberIdButton" text="Sort by Subscriber ID" styleClass="button-blue"/>
        </HBox>

        <Button fx:id="backButton" text="Back" styleClass="button-blue" onAction="#handleBackButton"/>
    </VBox>
</AnchorPane>
