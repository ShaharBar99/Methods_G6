<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.HistoryScreenController"
            stylesheets="@historystyle.css"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: linear-gradient(to bottom right, #dbeafe, #93c5fd);">

    <VBox alignment="CENTER" spacing="30.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

        <!-- כותרת -->
        <Label text="📖 History" styleClass="title-label" />

        <!-- רשימת היסטוריה -->
        <TableView fx:id="parkingTable" prefHeight="400.0" prefWidth="700.0">
    <columns>
        <TableColumn fx:id="colSessionId" text="Session ID" prefWidth="100"/>
        <TableColumn fx:id="colSpotId" text="Spot ID" prefWidth="100"/>
        <TableColumn fx:id="colInTime" text="In Time" prefWidth="200"/>
        <TableColumn fx:id="colOutTime" text="Out Time" prefWidth="200"/>
        <TableColumn fx:id="colLate" text="Late?" prefWidth="80"/>
    </columns>
</TableView>

        <!-- כפתורים -->
        <HBox alignment="CENTER" 
        prefHeight="80.0"
      	maxWidth="Infinity"
        spacing="40.0">
            <Button text="🔄 Refresh" onAction="#displayHistory" styleClass="button-blue" prefWidth="200" prefHeight="50"/>
            <Button text="⬅ Back" onAction="#handleBackButton" styleClass="button-red" prefWidth="200" prefHeight="50"/>
        </HBox>

    </VBox>
</AnchorPane>
