<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.GuestScreenController"
            styleClass="main-pane"
            stylesheets="@GuestScreen.css">

    <VBox alignment="CENTER" spacing="30"
          AnchorPane.topAnchor="50.0"
          AnchorPane.bottomAnchor="50.0"
          AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0">

        <Label text="Guest View" styleClass="title-label"/>

        <Label fx:id="freeSpaceLabel" text="Free Space: --%" styleClass="reg-label"/>

        <Button fx:id="backButton" text="Back" onAction="#handleBackButton" styleClass="small-menu-button"/>

    </VBox>
</AnchorPane>
